{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": [
      "es2017",
      "dom"
    ],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@portfolio/components": [
        "libs/components/src/index.ts"
      ],
      "@portfolio/functions": [
        "libs/functions/src/index.ts"
      ],
      "@portfolio/interfaces": [
        "libs/interfaces/src/index.ts"
      ],
      "@portfolio/services": [
        "libs/services/src/index.ts"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "tmp",
    "**/README.md"
  ]
}
